{block scripts}
<script>
    $(document).ready(function () {
        $(".hoverDiv").hover(function () {
            $(this).children('.overlayed').css("opacity", "0.1");
            $(this).children('.overlay').fadeIn(0);
        }, function () {
            $(this).children('.overlayed').css("opacity", "1");
            $(this).children('.overlay').fadeOut(0);
        });
    });
</script>
